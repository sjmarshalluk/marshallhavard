<div class="wrapper">

	<div class="row">
		<div class="c8 s2">
			<h2>Common questions</h2>

			<% @questions.each do |question| %>
				<h1><%= link_to "#{question.question}", question_path(question) %></h1>
				<p><%= question.answer.html_safe %></p>
			<% end %>
			<%= link_to "Add a question", new_question_path, class: "button" %>
		</div>
	</div>
</div>
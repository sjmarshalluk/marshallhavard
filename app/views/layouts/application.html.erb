<!DOCTYPE html>
<html>
<head>
  <title>Marshall Havard | Chartered Accountants</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//use.typekit.net/mkd2fyg.js"></script>
<script>try{Typekit.load();}catch(e){}</script>
	
</head>
<body id="body">


<% if logged_in? %>




<% flash.each do |key, value| %>
	<div class="<%= key %>">
		<div class="wrapper">
			<p><%= value %></p>
		</div>
	</div>
<% end %>

<header>
	<div class="wrapper">
		<div class="row">
			<div class="c12">
				<div id="logo">
					<%= link_to "Marshall Havard", root_path %>
				</div>
				<nav class="nav-collapse">
					<ul>
						<li><%= link_to_active_class "Who we can help", "selected", clients_path %></li>
						<li><%= link_to_active_class "Advice & information", "selected", '/advice' %></li>
						<li><%= link_to_active_class "Services", "selected", services_path %></li>
						<li><%# link_to_active_class "More", "selected", '/big_menu', class: "big-menu" %></li>
						<li><%= link_to_active_class "About us", "selected", '/about-us' %></li>
						<li><%= link_to_active_class "Contact", "selected", '/contact', 'data-no-turbolink' => true %></li>
					</ul>
				</nav>
				<script>
		      		var navigation = responsiveNav(".nav-collapse");
		    	</script>
			</div>
		</div>
	</div>
</header>


<div id="content">
	<%= yield %>
</div>


<footer class="padded">
	<div class="wrapper">
		<div class="row">
			<div class="c3">
				<ul>
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "Services", services_path %></li>
					<li><%= link_to "Advice & information", '/advice' %></li>
					<li><%= link_to "About Us", '/about-us' %></li>
					<li><%= link_to "The team", '/team' %></li>
					<li><%= link_to "Contact", '/contact' %></li>
					<% if logged_in? %>
						<li><%= link_to "Users", new_user_path %></li>
						<li><%= link_to "Log out", session_path, method: :delete %></li>
					<% end %>
				</ul>
			</div>
			<div class="c3">
				<ul class="clients">
					<% @clients.each do |client| %>
						<li><%= link_to client.title, client_path(client) %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</footer>

<% else %>

<%= yield %>

<% end %>

<script type="text/javascript">
  $(document).ready(function () {
    $('.big-menu').magnificPopup({
      type: 'ajax',
      alignTop: true,
      overflowY: 'hidden', // as we know that popup content is tall we set scroll overflow by default to avoid jump,
      removalDelay: 300,
      mainClass: 'mfp-fade'
    });

    $(document).on('click', '.popup-modal-dismiss', function (e) {
      e.preventDefault();
      $.magnificPopup.close();
    });
  });
</script>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Marshall Roche | Chartered Accountants</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <script src="https://use.typekit.net/mkd2fyg.js"></script>
<script>try{Typekit.load({ async: true });}catch(e){}</script>
	
</head>
<body>


<% if logged_in? %>

<% flash.each do |key, value| %>
	<div class="<%= key %>">
		<div class="wrapper">
			<p><%= value %></p>
		</div>
	</div>
<% end %>

<header id="header">
	<div class="wrapper">
		<div class="row">
			<div class="c12">
				<div id="logo">
					<%= link_to "Marshall Havard", root_path %>
				</div>
				<nav class="nav-collapse">
					<ul id="global-nav">
						<li><%= link_to_active_class "How We Help", "selected", clients_path %></li>
						<li><%= link_to_active_class "Services", "selected", services_path %></li>
						<li><%= link_to_active_class "Advice", "selected", advice_path %></li>
						<li><%= link_to_active_class "About Us", "selected", '/about-us' %></li>
					</ul>
				</nav>
				<script>
		      		var navigation = responsiveNav(".nav-collapse");
		    	</script>

		    01234 567 890
		    <%= link_to "Get in touch", '/contact', :class => 'btn' %></p>
			</div>
		</div>
	</div>
</header>


<div id="content">
	<%= yield %>
</div>



	<footer class="padded dark">
		<div class="wrapper">
		<div class="row">
			<div class="c3">
				<ul>
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "How we can help", clients_path %></li>
					<li><%= link_to "Services", services_path %></li>
					<li><%= link_to "About Us", '/about-us' %></li>
					<li><%# link_to "The team", '/team' %></li>
					<li><%= link_to "Contact", '/contact' %></li>
					<% if logged_in? %>
						<li><%= link_to "Users", new_user_path %></li>
						<li><%= link_to "Summary", '/summary' %></li>
						<li><%= link_to "Log out", session_path, method: :delete %></li>
					<% end %>
				</ul>
			</div>
			<div class="c3">
				<ul class="clients">
					<% @clients.each do |client| %>
						<li><%= link_to client.title, client_path(client) %></li>
					<% end %>
				</ul>
			</div>

			<div class="c6">
				<div id="newsletter">
					<h4>Newsletter</h4>
					<p>Subscribe and get a financial an economical digest each quarter as well as news and offers</p>
					<!-- Begin MailChimp Signup Form -->
					<div id="mc_embed_signup">
					<form action="//marshallhavard.us10.list-manage.com/subscribe/post?u=2d9178ba5d23a19837d7c6b33&amp;id=4b8eda362e" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
					    <div id="mc_embed_signup_scroll">
					<div class="mc-field-group">
					</label>
						<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Email address">
					</div>
						<div id="mce-responses" class="clear">
							<div class="response" id="mce-error-response" style="display:none"></div>
							<div class="response" id="mce-success-response" style="display:none"></div>
						</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
					    <div style="position: absolute; left: -5000px;"><input type="text" name="b_2d9178ba5d23a19837d7c6b33_4b8eda362e" tabindex="-1" value=""></div>
					    <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
					    </div>
					</form>
					</div>

					<!--End mc_embed_signup-->
				</div>
			</div>
		</div>	
		</div>
	</footer>

<% else %>

<%= yield %>

<% end %>


</body>
</html>

<%= content_for :dark, 'alt' %>

<div class="padded">
	<div class="wrapper push-top">
		<div class="row">
			<div class="c8 med-c12">
				<h2>
					<strong><%= @client.title %></strong>
				</h2>
				<p class="intro faded"><em><%= @client.headline %></em></p>
				<p class="intro"><%= @client.intro %></p>







		<% if @client.services.present? %>



				<h4 class="push-top-half border">How we can help</h4>
				<p><%= @client.help_intro %></p>


				<div class="push-top-half">
				<% @client.services.each do |service|%>
					<div class="c6 sml-c12 service-box">
						
						<h5><%= service.name %></h5>
						<p class="faded"><%= simple_format truncate(service.description, :length => 80) %></p>

					</div>
				<% end %>
				</div>

		<% end %>


		<% if @client.guides.present? or @client.questions.present? %>
				<div class="push-top-half border clear">
					<h4>Expert advice &amp; information</h4>
					<p><%= @client.advice_intro %></p>


					<ul id="sheets">
						<% @client.guides.each do |guide| %>

							<li class="c4 med-c6 sml-c12">
								<%= link_to client_guide_path(@client, guide) do %>
									<div class="panel">
										<h4><%= guide.title %></h4>
										<p class="faded small-copy"><%= guide.summary %></p>
									</div>
								<% end %>
								
							</li>
						<% end %>

						<% @client.questions.each do |question|%>
							<li class="c4">
								<%= link_to client_question_path(@client, question) do %>
									<div class="panel">
										<h4>Common question</h4>
										<p class="faded small-copy"><%= question.question %></p>
									</div>
								<% end %>
							</li>
						<% end %>
					</ul>
				</div>
			</div>

			<div class="c3 s1">
				<p class="small">Feel free to contact us on 023 9234 0775 or <a href="mailto:hello@marshallhavard.co.uk">via email</a> if you have any questions</p>
			</div>
			

		<% end %>
		</div>


		<div class="row">
			<div class="c12">

			<% if logged_in? %>
					<p class="small faded push-top-half">Last updated: <%= time_ago_in_words @client.updated_at %> ago 
							| <%= link_to "Edit", edit_client_path(@client) %> 
							| <%= link_to "Delete", client_path(@client), method: :delete %></p>
			<% end %>
			</div>
		</div>
	</div>
</div>


	<div id="contact-us" class="t-center">
		<h3>Talk to one of our experts today. Call us on 023 9234 0775</h3>
	</div>







<script>
		$(function(){
			$("#sub-nav").sticky({topSpacing:0});
		});
</script>

<script>
	$(document).ready(function () {
		$(document).on("scroll", onScroll);
 
		$('a[href^="#"]').on('click', function (e) {
			e.preventDefault();
			$(document).off("scroll");
 
			$('a').each(function () {
				$(this).removeClass('active');
			})
			$(this).addClass('active');
 
			var target = this.hash;
			$target = $(target);
			$('html, body').stop().animate({
				'scrollTop': $target.offset().top+2
			}, 500, 'swing', function () {
				window.location.hash = target;
				$(document).on("scroll", onScroll);
			});
		});
	});
 
	function onScroll(event){
		var scrollPosition = $(document).scrollTop();
		$('#sub-nav nav a').each(function () {
			var currentLink = $(this);
			var refElement = $(currentLink.attr("href"));
			if (refElement.position().top <= scrollPosition && refElement.position().top + refElement.height() > scrollPosition) {
				$('#sub-nav nav ul li a').removeClass("active");
				currentLink.addClass("active");
			}
			else{
				currentLink.removeClass("active");
			}
		});
	}
</script>


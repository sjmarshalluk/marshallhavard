

<div id="hero" class="padded">
	<div class="wrapper">
		<div class="fake-row">
			<h1><%= @client.headline %></h1>
			<p><%= @client.intro %></p>
			<nav>
				<ul>
					<li><a href="#help">How we can help you</a></li>
					<li><a href="#advice">Expert advice</a></li>
					<li><a href="#why">Why Marshall Havard</a></li>
				</ul>
			</nav>
		</div>
	</div>
</div>

<section id="help" class="padded">
	<div class="wrapper">
		<div class="row">
			<div class="c8">
				<h2>How we can help</h2>
				<p><%= @client.help_intro %></p>
			</div>
		</div>
		<div class="row">
			<% @client.services.each do |service|%>
				<div class="c2 service-box">
					<%= link_to service.name, service %>
				</div>
			<% end %>
		</div>
	</div>
</section>

<section id="advice" class="dark padded">
	<div class="wrapper">
		<div class="row">
			<div class="c6 s6">
				<h2>Expert advice &amp; information</h2>
				<p><%= @client.advice_intro %></p>

				<div class="client-advice small-copy border-top">
					<h4>Help sheets</h4>
					<p class="no-margin">Our self written guides are meant to be used by anyone looking for a clear, concise resource to find the answer you need.</p>
					<ul>
						<% @client.guides.each do |guide|%>
							<li><%= link_to guide.title, client_guide_path(@client, guide) %></li>
						<% end %>
					</ul>
					<%= link_to "Read all #{@client.title} help sheets", client_guides_path(@client), class: "small" %>
				</div>
				<div class="client-questions small-copy border-top">
					<h4>Common questions</h4>
					<p class="no-margin">There are some questions we get asked all the time. Weâ€™ve collected them all together so you can get the answer too.</p>
					<ul>
						<% @client.questions.each do |question|%>
							<li><%= link_to question.question, client_question_path(@client, question) %></li>
						<% end %>
					</ul>
					<%= link_to "Read all #{@client.title} common questions", client_questions_path(@client), class: "small" %>
				</div>
				
			</div>
		</div>
	</div>
</section>

<section id="why" class="padded">
	<div class="wrapper">
		<div class="row">
			<div class="c6">
				<h2>Why Marshall Havard</h2>
				<p><%= @client.advice_intro %></p>
			</div>
		</div>
	</div>
</section>

<div class="wrapper">
	<div class="row">
		<div class="c12 border-top">
			<% if logged_in? %>
				<p class="no-margin">Last updated: <%= time_ago_in_words @client.updated_at %> ago</p>
				<%= link_to "Edit", edit_client_path(@client), class: "button" %>
				<%= link_to "Delete", client_path(@client), method: :delete, class: "button" %>
			<% end %>
		</div>
	</div>
</div>


<script type="text/javascript">
	$('a[href*=#]:not([href=#])').click(function() {
    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') 
        || location.hostname == this.hostname) {

        var target = $(this.hash);
        target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
           if (target.length) {
             $('html,body').animate({
                 scrollTop: target.offset().top
            }, 1000);
            return false;
        }
    }
});
</script>

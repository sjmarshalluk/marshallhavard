							<%= link_to client_guide_path(@client, guide) do %>
								<div class="panel">
									<h5>Help Sheet</h5>
									<h3><%= guide.title %></h3>
									<p class="faded small-copy"><%= guide.summary %></p>
								</div>
							<% end %>
							
						</li>
					<% end %>

					<% @client.questions.each do |question|%>
						<li class="c3">
							<%= link_to client_question_path(@client, question), remote: true, class: "ajax", rel: "advice" do %>
								<div class="panel">
									<h5>Common question</h5>
									<h3><%= question.question %></h3>
								</div>
							<% end %>
						</li>
					<% end %>
				</ul>
				
			</div>

			
		</div>
		</div>
	</section>
<% end %>


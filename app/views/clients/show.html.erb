<% if @client.services.present? %>
	<section id="help">
		<div class="wrapper">
			<div class="padded">
				<div class="row">
					<div class="c8 s2 center push-top-half">
						<h5>How we can help</h5>
						<p class="push-top-half"><%= @client.help_intro %></p>
					</div>
				</div>
				<div class="row" style="position: relative; overflow: visible">
					<% @client.services.each do |service|%>
						<div class="c3 service-box">
							<%= link_to client_service_path(@client, service), remote: true, class: "ajax", rel: "service" do %>

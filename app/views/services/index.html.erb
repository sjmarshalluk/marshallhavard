

<div class="wrapper">

	<div class="row push-top">
		<div class="c8 s2 center">
			<h1>Our services</h1>
			<p>There are many ways we can help our clients.</p>
		</div>
	</div>

	<div class="row push-top">
		<% @services.each do |service| %>
			<div class="c3 service-box-all">
				<h3><%= service.name %></h3>
				<%= service.description.html_safe %>
			</div>
		<% end %>
	</div>

	<% if logged_in? %>
	<div class="admin-tools center small-copy push-top faded">
		<%= link_to "Add a service", new_service_path %>
	</div>
	<% end %>
</div>




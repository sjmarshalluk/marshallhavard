<div class="wrapper">
	
	<div class="row push-top">
		<div class="c8">
			
			<% if @client.present? %>
				<%= link_to @client.title, client_path(@client) %>
			<% end %>
			<h1><%= @guide.title %></h1>
			<p><%= @guide.body.html_safe %></p>

			
			<p>Relevant to:</p>
			<ul>
				<li>
					<% @guide.clients.each do |client|%>
					    <%= link_to client.title, client %>
					<% end %>
				</li>
			</ul>


			<% if logged_in? %>
				<p>Last updated: <%= time_ago_in_words @guide.updated_at %> ago</p>
				<%= link_to "Edit", edit_guide_path(@guide), class: "button" %>
				<%= link_to "Delete", guide_path(@guide), method: :delete, class: "button" %>
			<% end %>


		</div>
		<div class="c3 s1">

			<div class="share">
				<h4>Share this help sheet</h4>
				<a class="twitter-share-button" href="https://twitter.com/share"
				  data-related="twitterdev"
				  data-size="large"
				  data-count="none">
				Tweet
				</a>
			</div>
			
			<% if @client.present? %>
				<nav class="related">
					<ul>
						<% @client.guides.each do |guide|%>
							<li><%= link_to_active_class guide.title, "selected", client_guide_path(@client, guide) %></li>
						<% end %>
					</ul>
				</nav>
			<% end %>

		</div>

	</div>

</div>



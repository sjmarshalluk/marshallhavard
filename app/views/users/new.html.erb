
<div class="wrapper">

	<div class="row">
		<div class="c4 s4">
			<h1>Add a user</h1>

			<%= simple_form_for @user do |f| %>

				<%= f.input :email %>
				<%= f.input :password %>
				<%= f.input :password_confirmation %>

				<%= f.button :submit, "Sign up" %>

			<% end %>

		</div>
	</div>
</div>